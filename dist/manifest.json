{
  "manifest_version": 3,
  "name": "position-analytics",
  "version": "1.0.8",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "system.cpu",
    "system.memory",
    "system.storage",
    "system.display",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
